#cloud-config
autoinstall:
  version: 1
  early-commands:
    - systemctl stop ssh # otherwise packer tries to connect and exceed max attempts
  network:
    network:
      version: 2
      ethernets:
        eth0:
          dhcp4: yes
          dhcp-identifier: mac  # Solves VM getting a different IP after reboot ans Packer not conecting
    locale: {{ locale }}
  keyboard:
    layout: {{ language }}
    variant: {{ keyboard }}
  identity:
    hostname: {{ vm_name }}
    username: {{ ssh_username }}
    password: {{ ssh_password_crypted }}
  ssh:
    install-server: true
    allow-pw: yes
  late-commands:
    - echo '{{ ssh_username }} ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/{{ ssh_username }}
    - sed -ie 's/GRUB_CMDLINE_LINUX=.*/GRUB_CMDLINE_LINUX="net.ifnames=0 biosdevname=0"/' /target/etc/default/grub
    - curtin in-target --target /target update-grub2
